%div{class: 'panel panel-primary'}
  %div{class: 'panel-heading'}= "#{@item.class.table_name.humanize} #{@item}"
  %div{class: 'panel-body'}
    %table.table
      %tbody
        - @item.class.display_attributes.each do |k|
          %tr
            %td{:width => '33%'}
              %b= "#{k.to_s.humanize}:"
            %td= @item.send(k)
  %div{class: 'panel-footer text-center'}= link_to 'Order!', account_order_url(@item)
