!!! 1.1
%html
  %head
    %title
      = @app_name || Rails.application.config.fission.site_brand
      - if content_for?(:title)
        = " - #{content_for(:title)}"
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'description', content: ''}
    %meta{name: 'viewport', content: 'width=device-width'}
    = stylesheet_link_tag @site_style, media: 'all' #'application', media: 'all'
    = javascript_include_tag 'application'
    - if @intercom_args
      = javascript_include_tag 'intercom_io'
    = csrf_meta_tags

  %body{ "data-spy" => "scroll", "data-target" => "#sitenav" }
    // Site nav
    = render partial: 'layouts/nav'

    // Main page content
    %div.wrap
      %div.navfix#top
        = render partial: 'layouts/alerts'
        = yield

    // Footer content
    = render partial: 'layouts/footer'

    - if @analytics
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{@analytics[:ref]}', '#{@analytics[:name]}');
        ga('send', 'pageview');

    - if @intercom_args
      = render :partial => 'layouts/intercom_io'
