!!! 1.1
%html
  %head
    %title
      = Rails.application.config.fission.site_brand
      - if content_for?(:title)
        = " - #{content_for(:title)}"
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'description', content: ''}
    %meta{name: 'viewport', content: 'width=device-width'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{ "data-spy" => "scroll", "data-target" => "#sitenav" }
    // Site nav
    = render partial: 'layouts/nav'

    // Main page content
    %div.wrap
      %div.navfix#top
        = render partial: 'layouts/alerts'
        = yield

    // Footer content
    = render partial: 'layouts/footer'

    - if @analytics
      :javascript
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', '#{@analytics[:ref]}', '#{@analytics[:name]}');
        ga('send', 'pageview');

    - if current_user
      - current_user_hash = OpenSSL::HMAC.hexdigest("sha256", "je2ycdxbn-er_kQ1EZHQhq50Npi9afG4EO0WDAaY", "#{current_user.username}@hw-ops.com")
      - if @accounts
        %script{ :id => "IntercomSettingsScriptTag" }
          window.intercomSettings = {
          name: "#{current_user.username}",
          email: "#{current_user.username}@hw-ops.com",
          created_at: "#{current_user.created_at.to_time.to_i}",
          app_id: "0de410ec3b1a18da33752c08b069b51e9257608a",
          user_hash: "#{current_user_hash}",
          accounts: "#{@accounts.count}",
          repos: "#{@repos.count}"
          };
      - else
        %script{ :id => "IntercomSettingsScriptTag" }
          window.intercomSettings = {
          name: "#{current_user.username}",
          email: "#{current_user.username}@hw-ops.com",
          created_at: "#{current_user.created_at.to_time.to_i}",
          app_id: "0de410ec3b1a18da33752c08b069b51e9257608a",
          user_hash: "#{current_user_hash}"
          };

      :javascript
        (function(){var w=window;var ic=w.Intercom;if(typeof ic==="function"){ic('reattach_activator');ic('update',intercomSettings);}else{var d=document;var i=function(){i.c(arguments)};i.q=[];i.c=function(args){i.q.push(args)};w.Intercom=i;function l(){var s=d.createElement('script');s.type='text/javascript';s.async=true;s.src='https://static.intercomcdn.com/intercom.v1.js';var x=d.getElementsByTagName('script')[0];x.parentNode.insertBefore(s,x);}if(w.attachEvent){w.attachEvent('onload',l);}else{w.addEventListener('load',l,false);}}})()
