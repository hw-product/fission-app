!!! 1.1
%html
  %head
    %title
      = Rails.application.config.fission.site_brand
      - if content_for?(:title)
        = " - #{content_for(:title)}"
    %meta{charset: 'utf-8'}
    %meta{'http-equiv' => 'X-UA-Compatible', content: 'IE=edge,chrome=1'}
    %meta{name: 'description', content: ''}
    %meta{name: 'viewport', content: 'width=device-width'}
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body{style: 'padding-bottom: 70px;'}
    %div{class: 'navbar navbar-inverse navbar-static-top'}
      %div.container
        %div{class: 'navbar-header'}
          %button{'type' => 'button', 'class' => 'navbar-toggle', 'data-toggle' => 'collapse', 'data-target' => '.navbar-collapse'}
            %span{class: 'icon-bar'}
            %span{class: 'icon-bar'}
            %span{class: 'icon-bar'}
          %a{class: 'navbar-brand', href: "/s/"}= Rails.application.config.fission.site_brand
        %div{class: 'collapse navbar-collapse'}
          %ul{class: 'nav navbar-nav'}
            %li.active
              %a{href: root_url}= 'Dashboard'
              %li
                %a{href: accounts_url}= 'Accounts'
          - if current_user
            %ul{class: 'nav navbar-nav navbar-right'}
              %li.dropdown
                %a{href: '#', 'data-toggle' => 'dropdown'}
                  %img{class: 'pull-left', src: current_user.identities.first[:infos].try(:[], :image), width: 30, height: 30}
                  %b.caret
                %ul{class: 'dropdown-menu'}
                  %li
                    %a{href: edit_user_url(current_user.id)}= 'Profile'
                  %li
                    %a{href: destroy_session_url}= 'Logout'

    // Main page content
    / %div.container 
    %div
      = render partial: 'layouts/alerts'
      = yield
      / - unless @layout_freeform
      /   %div.row
      /     %div{class: 'col-md-9', id: 'content'}
      /       = yield
      /     %div{class: 'col-md-3', id: 'sidebar'}
      /       = render partial: 'layouts/side_bar' if valid_user?
      / - else
      /   = yield

    // Footer content
    %div{class: 'navbar navbar-default navbar-fixed-bottom', role: 'footer'}
      %div.container
        %p{class: 'navbar-text navbar-left'}= "v#{FissionApp::VERSION.version} - #{FissionApp::VERSION.codename}"
        %p{class: 'navbar-text navbar-right'}!= "&copy; #{Time.now.year}"
