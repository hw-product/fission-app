- if flash.any?
  - map = {:info => [:info, :information, :notice], :success => [:success], :warning => [:warn, :warning], :danger => [:error, :alert]}
  - map.each do |k, v|
    - v.each do |key|
      - if flash[key]
        %div{class: "alert alert-#{k}"}
          %strong="#{key.capitalize}:"
          = flash[key]
