%div.account-info
  %div.container
    %h2= "#{@account.name}"
    %h3= "APT Repository Setup"
    %p= "Add your repository"
    %pre
      :preserve
        sudo bash -c "echo deb https://#{@account.name}:#{@account.tokens.first.token}@#{@account.name}.pkgd.io:9876/repository/apt/ubuntu 12.04 stable > /etc/apt/sources.list.d/#{@account.name}.pkgd.io.list"
        sudo apt-get update

%div.repository-info.widget
  %div.container.container-padding
    %div.panel.panel-default
      %div.panel-heading
        %h2= "Active Repositories"
      %div.panel-body
        %p= "Currently active repositories."
      %table.table.table-bordered.table-hover
        %thead
          %tr
            %th= 'Name'
            %th= 'Location'
            %th= 'Disable'
        %tbody
          - @registered.each do |repo|
            %tr
              %td= repo.short_name
              %td= repo.url
              %td{class: 'text-center'}
                %a{href: repository_disable_url(repo, :account_id => @account), style: 'color: red'}
                  %span{class: 'glyphicon glyphicon-remove'}

      - if @footer
        %div{class: 'panel-footer'}= render(partial: @footer, locals: {obj: @items})

    = render :partial => 'repositories/enable_popup'
