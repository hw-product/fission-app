%div{class: 'panel panel-primary'}
  %div{class: 'panel-heading'}
    Register
  %div{class: 'panel-body'}
    = simple_form_for @identity, :url => register_user_url, :for => 'user' do |f|
      = f.input :unique_id, :label => 'Username', :input_html => {:name => 'unique_id'}, :as => :string, :required => true
      = f.input :email, :input_html => {:name => 'email'}, :as => :string, :required => true
      = f.input :password, :input_html => {:name => 'password'}, :as => :password
      = f.input :password, :input_html => {:name => 'password_confirmation'}, :as => :password
      = f.button :submit
